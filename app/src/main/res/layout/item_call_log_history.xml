<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_xsmall"
    android:paddingStart="@dimen/margin_normal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img"
        android:layout_width="@dimen/icon_size_xsmall"
        android:layout_height="@dimen/icon_size_xsmall"
        android:layout_centerVertical="true"
        app:srcCompat="@null" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_toStartOf="@id/item_menu"
        android:layout_toEndOf="@id/img"
        android:textAppearance="@style/TextAppearance.Aurora.Line1"
        tools:text="+xx-xxxxxxxxxx" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_alignStart="@id/line1"
        android:layout_marginStart="@dimen/margin_xxsmall"
        android:layout_toStartOf="@id/item_menu"
        android:layout_toEndOf="@id/img"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Aurora.Line2"
        android:textSize="12sp"
        tools:text="Location, 00:00 xx" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@drawable/ripple_background"
        android:padding="@dimen/margin_small"
        app:srcCompat="@drawable/ic_menu_dots" />
</RelativeLayout>